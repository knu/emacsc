use Cwd qw(abs_path getcwd);
use File::Basename;
use Getopt::Long;

main();

sub usage {
    my $name = basename($0);

    print STDERR <<EOF;
usage: $name [directory]

Run dired on a given directory.  If omitted, ask where with the
current directory as default.

This command depends on emacsc(1).  Put the following lines in your
Emacs initialization file.

    (require 'emacsc)
EOF
}

sub main {
    my $opt_h;
    GetOptions("h|help" => sub { usage; exit }) or exit 64;

    if (1 < @ARGV) {
        usage;
        exit 64;
    }

    eval {
        if (@ARGV) {
            my($dir, $file) = parse_filename($ARGV[0]);
            emacsc(<<'ELISP', $dir, $file);
(let* ((dir "%s")
       (filename "%s")
       (buffer (dired dir))
       (pos (with-current-buffer buffer
              (goto-char (point-min))
              (dired-next-line 1)
              (while (and (not (eobp))
                          (or (dired-between-files)
                              (not (string= (file-name-nondirectory (dired-get-filename nil t))
                                            filename))))
                (dired-next-line 1)))))
  (switch-to-buffer buffer)
  ;; force redisplay of hl-line-mode
  (if (bound-and-true-p hl-line-mode)
    (hl-line-highlight)))
ELISP
        } else {
            my $dir = getcwd();
            emacsc(<<'ELISP', $dir);
(let ((current-prefix-arg '(4))
      (default-directory "%s"))
  (call-interactively 'dired))
ELISP
        }
    };
    if ($@) {
        print STDERR basename($0), ": ", $@;
        exit 1;
    }
}

sub parse_filename {
    my($file) = @_;

    $abs = abs_path($file);

    if (-d $abs) {
        return ($abs, '..');
    } elsif (-e _ || -l $abs) {
        return (dirname($abs), basename($abs));
    } else {
        die sprintf("%s: %s\n", $file, $! || 'No such file or directory');
    }
}

sub elisp_escape {
    (local $_) = @_;
    s/[\\"]/\\$1/;
    $_;
}

sub emacsc {
    my($elisp, @args) = @_;
    $elisp =~ s/;;.*$//mg;
    $elisp =~ s/\s+(?=\s|\z)//g;
    exec qw(emacsc -x), sprintf($elisp, map elisp_escape($_), @args);
}
